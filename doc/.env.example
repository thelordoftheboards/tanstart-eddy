# Basic server configuration
PORT=8088
SERVER_URL=http://localhost:8088
DATABASE_URL=postgresql://user:password@server:5432/database-name
DATABASE_AUTOMATIC_MIGRATIONS=enabled

# Configuration for Better Auth. Regenerated by running `bun auth:secret`.
BETTER_AUTH_SECRET=thisandthatsomethingsomethingandanother

# Configuration for Resend (from https://resend.com/api-keys, https://resend.com/webhooks)
RESEND_API_KEY=re_thisandthatsomethingsomethingandanother
RESEND_WEBHOOK_EMAIL_RECEIVED_SIGNING_SECRET=whsec_thisandthatsomethingsomethingandanother

# OAuth2 providers, optional, update as needed
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# NOTE:
# In your OAuth2 apps, set callback/redirect URIs to`http://localhost:8088/api/auth/callback/<provider>`
# e.g. http://localhost:8088/api/auth/callback/github

# Map tiler key for visualizing maps on the client, from https://cloud.maptiler.com/account/keys/
MAP_MAPTILER_API_KEY_CLIENT=thisandthatsomethingsomethingandanother
